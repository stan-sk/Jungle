<section class="login">

<header class="page-header"><h1>Login</h1></header>

<div class="col-2">
<%= form_tag '/login', class: "login-form" do %>

  Email: <%= text_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>

<% end %>
</div>

<br>
<span><h6>Not yet registered ? Sign up <%= link_to 'here', [:signup] %></h6></span>

</section>

